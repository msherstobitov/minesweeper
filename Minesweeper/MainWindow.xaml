<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Minesweeper" WindowStartupLocation="CenterScreen" 
        Width="616" Height="389" ResizeMode="NoResize" Background="LightBlue">
    
    <Grid>
        <Button x:Name="btnRestart" Content="restart" Margin="10,6,0,0" Width="70" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" />

        <Label Content="Mines:" FontSize="16" Margin="252,-1,0,0" Width="92" Height="29" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Label Content="99" x:Name="lblMinesLeft"  FontSize="16" Margin="312,-1,0,0" Width="58" Height="28" VerticalAlignment="Top"  HorizontalAlignment="Left" />
        
        <Canvas x:Name="minefield" Margin="0,30,0,0" />
    </Grid>

</Window>
